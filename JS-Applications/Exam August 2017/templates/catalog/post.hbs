<article class="post" data-id="{{_id}}">
    <div class="col rank">
        <span>1</span>
    </div>
    <div class="col thumbnail">
        <a href="{{url}}">
            <img src="{{imageUrl}}">
        </a>
    </div>
    <div class="post-content">
        <div class="title">
            <a href="{{url}}">
                {{title}}
            </a>
        </div>
        <div class="details">
            <div class="info">
                submitted 1 day ago by {{author}}
            </div>
            <div class="controls">
                <ul>
                    <li class="action"><a class="commentsLink" href="#/commentsLink">comments</a></li>
                    <li class="action"><a class="editLink" href="#/editLink">edit</a></li>
                    <li class="action"><a class="deleteLink" href="#/deleteLink">delete</a></li>
                </ul>
            </div>

        </div>
    </div>
</article>